<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yuktigoswami.jhms.NavigationProfile"
    tools:showIn="@layout/app_bar_navigation_profile">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.yuktigoswami.profile.MainActivity"
        tools:showIn="@layout/activity_navigation_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:background="@drawable/profileback1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingTop="15dp"
                    android:text="Ashwini Sawal"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/student" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/leaveButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bus" />

    <Button
        android:id="@+id/attendence"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/attendence" />

    <Button
        android:id="@+id/fee"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/attendence"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/fee" />

    <Button
        android:id="@+id/details"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/leaveButton"
        android:layout_marginBottom="22dp"
        android:background="@drawable/aboutstudent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/details"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Leave"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/details"
        android:layout_alignBottom="@+id/details"
        android:layout_alignEnd="@+id/fee"
        android:layout_alignRight="@+id/fee"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="Fee"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/details"
        android:layout_alignBottom="@+id/details"
        android:layout_alignEnd="@+id/attendence"
        android:layout_alignRight="@+id/attendence"
        android:text="Attendence"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="13dp"
        android:text="Details"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

</RelativeLayout>
